<div class="container pb-2 mb-5">
  <div class="row">
    <div class="col-md-12 ">
      {{#if anuncios}}
      {{#each anuncios}}
      <a href="/anuncios/list/{{anuncio_id}}">
        <div class="fichaAnuncio">
          <p>{{anuncio_id}}</p>
          <div>
            <p>{{usuario}}</p>
            <img class="avatar avatar-s" src="/img/profiles/{{pictureURLusuario}}" alt="">
          </div>
          <div>
            <p>{{nombre}} </p>
            <img class="miniatura" src="/img/iconos/{{pictureURLactividad}}" alt="">
          </div>
          <p>{{salario_propuesto}} € </p>
          <div>
            <p> <i class="fa fa-calendar"></i> {{ formatearSp fecha_hora}} </p>
            <p>{{ formatearHoras fecha_hora}} </p>
            <p> <ins>◷</ins>{{duracion}} min</p>
          </div>
        </div>
      </a>
      {{/each}}
      {{else}}
      <div class="col-md-4-mx-auto">
        <div class="card card-body text-center">
          <tr>No hay anuncios guardados <a href="/anuncios/add"> Crea uno!</a></tr>
        </div>
      </div>
      {{/if}}
      <a class="btn btn-warning btn-block" href="javascript:void(0)" onclick="history.back();">Volver</a>
    </div>
  </div>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button>
</div>



</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="modal-body">
          <h2 class="fs-5">Popover in a modal</h2>
          <p>This <button class="btn btn-secondary" data-bs-toggle="popover" title="Popover title"
              data-bs-content="Popover body content is set in this attribute.">button</button> triggers a popover on
            click.</p>
          <hr>
          <h2 class="fs-5">Tooltips in a modal</h2>
          <p><a href="#" data-bs-toggle="tooltip" title="Tooltip">This link</a> and <a href="#" data-bs-toggle="tooltip"
              title="Tooltip">that link</a> have tooltips on hover.</p>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>